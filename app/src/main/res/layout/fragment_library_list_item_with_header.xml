<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:descendantFocusability="blocksDescendants"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/library_header_layout"
        android:layout_width="wrap_content"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/library_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/header_color"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/library_header_layout">
        <TextView
            android:id="@+id/library_artist"
            android:textSize="16sp"
            android:maxLines="1"
            android:textColor="@color/header_color"
            android:paddingStart="16dp"
            android:paddingEnd="72dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end" />
        <ImageView
            android:id="@+id/library_artists_action"
            android:layout_width="48dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_action_options"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
