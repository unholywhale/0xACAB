<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:visibility="invisible"/>
    <ListView
        android:id="@+id/library_list"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>
    <Button
        android:id="@+id/library_add"
        android:background="@drawable/round_button"
        android:text="+"
        android:textSize="24sp"
        android:visibility="invisible"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/library_list"/>
    <ImageButton
        android:id="@+id/library_check_all"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_check_all"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/library_add"
        android:visibility="invisible"/>
    <ImageButton
        android:id="@+id/library_back"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_back_disabled"
        android:textSize="24sp"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/library_list"/>
</RelativeLayout>