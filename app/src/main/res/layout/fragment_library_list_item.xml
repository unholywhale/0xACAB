<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:descendantFocusability="blocksDescendants"
              android:layout_width="match_parent"
              android:layout_height="50dp">
    <View
        android:id="@+id/library_placeholder"
        android:layout_width="@dimen/checkbox_size"
        android:layout_height="@dimen/checkbox_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"/>
    <CheckBox
        android:id="@+id/library_checkbox"
        android:layout_width="@dimen/checkbox_size_double"
        android:layout_height="match_parent"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/library_artist"
        android:textSize="16sp"
        android:maxLines="1"
        android:textColor="@color/header_color"
        android:paddingStart="5dp"
        android:paddingEnd="72dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/library_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingLeft="5dp"
        android:paddingRight="72dp"
        android:layout_toRightOf="@id/library_placeholder"/>
    <ImageView
        android:id="@+id/library_artists_action"
        android:layout_width="48dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_arrow_right"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>
