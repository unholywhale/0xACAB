<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/artist_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <View
        android:id="@+id/artist_list_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"/>
    <View
        android:id="@+id/artist_placeholder"
        android:layout_width="@dimen/checkbox_size"
        android:layout_height="@dimen/checkbox_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"/>
    <CheckBox
        android:id="@+id/artist_checkbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/track_number"
        android:textColor="@color/text_dark_color"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingEnd="5dp"
        android:layout_toEndOf="@id/artist_placeholder"
        android:paddingRight="5dp"
        android:layout_toRightOf="@id/artist_placeholder"/>
    <TextView
        android:id="@+id/track_title"
        android:textColor="@color/text_light_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/track_number"
        android:layout_marginEnd="32dp"
        android:ellipsize="end"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/track_number"
        android:layout_marginRight="32dp"/>
    <TextView
        android:id="@+id/track_duration"
        android:textColor="@color/text_middle_color"
        android:textSize="12sp"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>
    <View
        android:id="@+id/divider_duration"
        style="@style/VerticalDivider"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/track_duration"
        android:layout_marginEnd="2dp"
        android:layout_toLeftOf="@id/track_duration"
        android:layout_marginRight="2dp"/>
    <ImageView
        android:id="@+id/artist_left_indicator"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_arrow_left"
        android:alpha="0"
        android:paddingStart="5dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:paddingLeft="5dp"
        android:layout_alignParentLeft="true"/>
    <ImageView
        android:id="@+id/artist_right_indicator"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_arrow_right"
        android:alpha="0"
        android:paddingEnd="5dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:visibility="visible"
        android:paddingRight="5dp"
        android:layout_alignParentRight="true"/>
</RelativeLayout>

