<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.whale.xacab" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/LightBlue" >
        <activity
            android:name="com.whale.xacab.MainActivity"
            android:launchMode="singleTop"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.whale.xacab.MusicService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <provider
            android:name="com.whale.xacab.QueueProvider"
            android:authorities="com.whale.xacab.provider"
            android:enabled="true"
            android:exported="false"
            android:multiprocess="true" />

    </application>

</manifest>
